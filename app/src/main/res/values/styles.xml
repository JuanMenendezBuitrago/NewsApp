<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="newsTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/textColorNewsTitle</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="newsData">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/textColorNewsData</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="newsLayout">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="chevron">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:src">@drawable/ic_chevron_right</item>
        <item name="android:tint">#666</item>
    </style>

</resources>
